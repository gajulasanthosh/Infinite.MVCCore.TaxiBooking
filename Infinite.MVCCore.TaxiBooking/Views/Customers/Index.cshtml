@model IEnumerable<CustomerViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md-5">
        <a asp-controller="Customers" asp-action="Create">Create</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th> CustomerId</th>
                    <th>CustomerName</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerId</td>
                        <td>@item.CustomerName</td>
                        
                        <td>
                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.CustomerId">Details</a>
                            <a asp-controller="Customers" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a>
                            <a asp-controller="Customers" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

