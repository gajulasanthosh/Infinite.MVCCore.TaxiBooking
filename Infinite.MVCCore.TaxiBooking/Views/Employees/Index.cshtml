@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}
<style>
    .image {
        background-image: url('https://images.unsplash.com/photo-1556339979-d7548eaf2401?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');
        background-repeat: no-repeat;
        background-size: cover;
    }
    .table{
        background-color:black;
    }
</style>

<body class="image">


    <div class="row offset-2 pt-5">
        @*<div class="col-md-9">*@
        <div class="row">
            <div class="col">
                <h2>List of Employees</h2>
            </div>
            <div class="col">
                <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Create new Employee</a>
            </div>

        </div>

        <div class="col-md-9">
            <table class="table table-hover ">
                <thead>
                    <tr>
                        <th>Employee Id</th>
                        <th>Employee Name</th>
                       
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.EmployeeId</td>
                            <td>@x.EmployeeName</td>
                            
                            <td>
                                <a asp-controller="Employees" asp-action="Details" asp-route-id="@x.EmployeeId" class="btn btn-primary">Details</a>
                                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@x.EmployeeId" class="btn btn-primary">Edit</a>
                                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@x.EmployeeId" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        @*</div>*@
    </div>
    </body>
