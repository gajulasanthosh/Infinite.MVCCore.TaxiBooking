


@model IEnumerable<EmployeeRosterViewModel>
@{
    ViewData["Title"] = "EmployeeRoster";
}



<div class="row ">
    <div class="col">
        <div class="row pt-5">
            <div class="col">
                <h2>List of EmployeeRosters</h2>
            </div>
            <div class="col offset-6">
                <a asp-controller="EmployeeRosters" asp-action="Create" class="btn btn-primary">Create new EmployeeRosters</a>
            </div>

        </div>

        <div class="col">
            <table class="table table-hover col-md-8">
                <thead>
                    <tr>
                        <th>RosterId</th>
                        <th>FromDate</th>
                        <th>ToDate</th>
                        <th>InTime</th>
                        <th>OutTime</th>
                        <th>EmployeeId</th>
                        <th>Actions</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td class="col-md-2">@x.Id</td>
                            <td class="col-md-2">@x.FromDate.ToShortDateString()</td>
                            <td class="col-md-2">@x.ToDate.ToShortDateString()</td>
                            <td class="col-md-2">@x.InTime.ToShortTimeString()</td>
                            <td class="col-md-2">@x.OutTime.ToShortTimeString()</td>
                            <td class="col-md-2">@x.EmployeeId</td>
                            <td class="col-md-9">
                                <a asp-controller="EmployeeRosters" asp-action="Details" asp-route-id="@x.Id" class="btn btn-primary">Details</a>
                                <a asp-controller="EmployeeRosters" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-primary">Edit</a>
                                <a asp-controller="EmployeeRosters" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-primary">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>